{
  "direction": "x",
  "columns": 3,
  "size": "medium",
  "width": "1128px",
  "id": "form_enterprise_info",
  "options": [
    {
      "label": "企业名称",
      "as": "input",
      "field": "companyName",
      "props": {
        "placeholder": "请输入企业全称",
        "clearable": true
      },
      "rule": "Yup.string().required('企业名称不能为空')",
      "gridArea": "auto / 1 / auto / 3"
    },
    {
      "label": "统一社会信用代码",
      "as": "input",
      "field": "creditCode",
      "props": {
        "placeholder": "请输入18位信用代码",
        "clearable": true,
        "maxLength": 18
      },
      "rule": "Yup.string().required('信用代码不能为空').length(18, '信用代码必须为18位')",
      "gridArea": "auto / 3 / auto / 4"
    },
    {
      "label": "企业类型",
      "as": "select",
      "field": "companyType",
      "props": {
        "placeholder": "请选择企业类型",
        "clearable": true,
        "options": [
          { "label": "有限责任公司", "value": "llc" },
          { "label": "股份有限公司", "value": "jsc" },
          { "label": "个人独资企业", "value": "sole" },
          { "label": "合伙企业", "value": "partnership" },
          { "label": "外商投资企业", "value": "foreign" },
          { "label": "国有企业", "value": "state" },
          { "label": "集体企业", "value": "collective" }
        ]
      },
      "rule": "Yup.string().required('请选择企业类型')",
      "gridArea": "auto / 1 / auto / 2"
    },
    {
      "label": "所属行业",
      "as": "cascader",
      "field": "industry",
      "props": {
        "placeholder": "请选择所属行业",
        "clearable": true,
        "showAllLevels": true,
        "options": [
          {
            "value": "it",
            "label": "信息技术",
            "children": [
              { "value": "software", "label": "软件开发" },
              { "value": "internet", "label": "互联网服务" },
              { "value": "ai", "label": "人工智能" },
              { "value": "bigdata", "label": "大数据" }
            ]
          },
          {
            "value": "finance",
            "label": "金融业",
            "children": [
              { "value": "bank", "label": "银行" },
              { "value": "insurance", "label": "保险" },
              { "value": "securities", "label": "证券" },
              { "value": "fund", "label": "基金" }
            ]
          },
          {
            "value": "manufacture",
            "label": "制造业",
            "children": [
              { "value": "electronics", "label": "电子设备" },
              { "value": "machinery", "label": "机械设备" },
              { "value": "automobile", "label": "汽车制造" },
              { "value": "textile", "label": "纺织服装" }
            ]
          },
          {
            "value": "trade",
            "label": "贸易业",
            "children": [
              { "value": "wholesale", "label": "批发业" },
              { "value": "retail", "label": "零售业" },
              { "value": "import_export", "label": "进出口贸易" }
            ]
          },
          {
            "value": "service",
            "label": "服务业",
            "children": [
              { "value": "consulting", "label": "咨询服务" },
              { "value": "advertising", "label": "广告传媒" },
              { "value": "education", "label": "教育培训" },
              { "value": "medical", "label": "医疗健康" }
            ]
          }
        ]
      },
      "gridArea": "auto / 2 / auto / 3"
    },
    {
      "label": "经营状态",
      "as": "select",
      "field": "businessStatus",
      "props": {
        "placeholder": "请选择经营状态",
        "clearable": true,
        "options": [
          { "label": "正常营业", "value": "active" },
          { "label": "停业整顿", "value": "suspended" },
          { "label": "注销", "value": "cancelled" },
          { "label": "吊销", "value": "revoked" }
        ]
      },
      "gridArea": "auto / 3 / auto / 4"
    },
    {
      "label": "注册资本",
      "as": "input-number",
      "field": "registeredCapital",
      "props": {
        "placeholder": "请输入注册资本",
        "min": 0,
        "max": 999999999
      },
      "tips": "单位：万元人民币",
      "gridArea": "auto / 1 / auto / 2"
    },
    {
      "label": "成立日期",
      "as": "date-picker",
      "field": "establishDate",
      "props": {
        "placeholder": "请选择成立日期",
        "clearable": true
      },
      "rule": "Yup.string().required('请选择成立日期')",
      "gridArea": "auto / 2 / auto / 3"
    },
    {
      "label": "营业期限",
      "as": "date-range-picker",
      "field": "businessPeriod",
      "props": {
        "startPlaceholder": "开始日期",
        "endPlaceholder": "结束日期",
        "clearable": true
      },
      "gridArea": "auto / 3 / auto / 4"
    },
    {
      "label": "企业规模",
      "as": "radio-group",
      "field": "companyScale",
      "props": {
        "options": [
          { "label": "微型企业", "value": "micro" },
          { "label": "小型企业", "value": "small" },
          { "label": "中型企业", "value": "medium" },
          { "label": "大型企业", "value": "large" }
        ]
      },
      "gridArea": "auto / 1 / auto / 2"
    },
    {
      "label": "员工人数",
      "as": "select",
      "field": "employeeCount",
      "props": {
        "placeholder": "请选择员工规模",
        "clearable": true,
        "options": [
          { "label": "1-50人", "value": "1-50" },
          { "label": "51-100人", "value": "51-100" },
          { "label": "101-500人", "value": "101-500" },
          { "label": "501-1000人", "value": "501-1000" },
          { "label": "1000人以上", "value": "1000+" }
        ]
      },
      "gridArea": "auto / 2 / auto / 3"
    },
    {
      "label": "是否上市",
      "as": "switch",
      "field": "isListed",
      "props": {},
      "gridArea": "auto / 3 / auto / 4"
    },
    {
      "label": "法定代表人",
      "as": "input",
      "field": "legalRepresentative",
      "props": {
        "placeholder": "请输入法定代表人姓名",
        "clearable": true
      },
      "rule": "Yup.string().required('法定代表人不能为空')",
      "gridArea": "auto / 1 / auto / 2"
    },
    {
      "label": "联系电话",
      "as": "input",
      "field": "contactPhone",
      "props": {
        "placeholder": "请输入联系电话",
        "clearable": true
      },
      "rule": "Yup.string().matches(/^1[3-9]\\d{9}$/, '请输入正确的手机号码')",
      "gridArea": "auto / 2 / auto / 3"
    },
    {
      "label": "电子邮箱",
      "as": "input",
      "field": "email",
      "props": {
        "placeholder": "请输入企业邮箱",
        "clearable": true
      },
      "rule": "Yup.string().email('请输入正确的邮箱格式')",
      "gridArea": "auto / 3 / auto / 4"
    },
    {
      "label": "企业官网",
      "as": "input",
      "field": "website",
      "props": {
        "placeholder": "请输入企业官网地址",
        "clearable": true
      },
      "gridArea": "auto / 1 / auto / 2"
    },
    {
      "label": "传真号码",
      "as": "input",
      "field": "fax",
      "props": {
        "placeholder": "请输入传真号码",
        "clearable": true
      },
      "gridArea": "auto / 2 / auto / 3"
    },
    {
      "label": "邮政编码",
      "as": "input",
      "field": "postalCode",
      "props": {
        "placeholder": "请输入邮政编码",
        "clearable": true,
        "maxLength": 6
      },
      "gridArea": "auto / 3 / auto / 4"
    },
    {
      "label": "所在地区",
      "as": "cascader",
      "field": "region",
      "props": {
        "placeholder": "请选择所在地区",
        "clearable": true,
        "showAllLevels": true,
        "options": [
          {
            "value": "beijing",
            "label": "北京市",
            "children": [
              { "value": "chaoyang", "label": "朝阳区" },
              { "value": "haidian", "label": "海淀区" },
              { "value": "dongcheng", "label": "东城区" },
              { "value": "xicheng", "label": "西城区" }
            ]
          },
          {
            "value": "shanghai",
            "label": "上海市",
            "children": [
              { "value": "pudong", "label": "浦东新区" },
              { "value": "huangpu", "label": "黄浦区" },
              { "value": "xuhui", "label": "徐汇区" },
              { "value": "jing_an", "label": "静安区" }
            ]
          },
          {
            "value": "guangdong",
            "label": "广东省",
            "children": [
              { "value": "guangzhou", "label": "广州市" },
              { "value": "shenzhen", "label": "深圳市" },
              { "value": "dongguan", "label": "东莞市" },
              { "value": "foshan", "label": "佛山市" }
            ]
          },
          {
            "value": "zhejiang",
            "label": "浙江省",
            "children": [
              { "value": "hangzhou", "label": "杭州市" },
              { "value": "ningbo", "label": "宁波市" },
              { "value": "wenzhou", "label": "温州市" },
              { "value": "jiaxing", "label": "嘉兴市" }
            ]
          },
          {
            "value": "jiangsu",
            "label": "江苏省",
            "children": [
              { "value": "nanjing", "label": "南京市" },
              { "value": "suzhou", "label": "苏州市" },
              { "value": "wuxi", "label": "无锡市" },
              { "value": "changzhou", "label": "常州市" }
            ]
          }
        ]
      },
      "rule": "Yup.string().required('请选择所在地区')",
      "gridArea": "auto / 1 / auto / 2"
    },
    {
      "label": "详细地址",
      "as": "input",
      "field": "address",
      "props": {
        "placeholder": "请输入详细地址（街道、门牌号等）",
        "clearable": true
      },
      "rule": "Yup.string().required('详细地址不能为空')",
      "gridArea": "auto / 2 / auto / 4"
    },
    {
      "label": "企业资质",
      "as": "checkbox-group",
      "field": "qualifications",
      "props": {
        "options": [
          { "label": "高新技术企业", "value": "hightech" },
          { "label": "ISO9001认证", "value": "iso9001" },
          { "label": "ISO14001认证", "value": "iso14001" },
          { "label": "AAA信用等级", "value": "aaa_credit" }
        ]
      },
      "gridArea": "auto / 1 / auto / 3"
    },
    {
      "label": "纳税类型",
      "as": "radio-group",
      "field": "taxType",
      "props": {
        "options": [
          { "label": "一般纳税人", "value": "general" },
          { "label": "小规模纳税人", "value": "small" }
        ]
      },
      "gridArea": "auto / 3 / auto / 4"
    },
    {
      "label": "主营业务",
      "as": "textarea",
      "field": "mainBusiness",
      "props": {
        "placeholder": "请简要描述企业主营业务范围",
        "clearable": true,
        "showCount": true,
        "maxLength": 500
      },
      "gridArea": "auto / 1 / auto / 4"
    },
    {
      "label": "企业简介",
      "as": "textarea",
      "field": "companyProfile",
      "props": {
        "placeholder": "请输入企业简介（公司发展历程、核心优势等）",
        "clearable": true,
        "showCount": true,
        "maxLength": 1000
      },
      "gridArea": "auto / 1 / auto / 4"
    }
  ]
}
